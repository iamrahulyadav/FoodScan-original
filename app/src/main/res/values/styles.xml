<?xml version="1.0" encoding="utf-8" ?>
<resources xmlns:foodscan="http://schemas.android.com/apk/res-auto">

    <style name="WhiteTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="actionBarStyle">@style/LightActionBar</item>
    </style>

    <style name="GreyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/greyLight</item>
        <item name="colorPrimaryDark">@color/greyDark</item>
        <item name="actionBarStyle">@style/DarkActionBar</item>
    </style>
    <style name="BlueTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blueLight</item>
        <item name="colorPrimaryDark">@color/blueDark</item>
        <item name="actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/greenLight</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
        <item name="actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="RedTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/redLight</item>
        <item name="colorPrimaryDark">@color/redDark</item>
        <item name="actionBarStyle">@style/DarkActionBar</item>
    </style>

    <style name="DarkActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/LightTitleTextStyle</item>
        <item name="icon">@drawable/graphic_foodscan_logo_small</item>
        <item name="displayOptions">showTitle|homeAsUp</item>
    </style>

    <style name="LightActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/DarkTitleTextStyle</item>
        <item name="icon">@drawable/graphic_foodscan_logo_small</item>
        <item name="displayOptions">showTitle|homeAsUp</item>
    </style>

    <style name="DarkTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="LightTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_height">51dp</item>
    </style>

    <style name="GreyButtonStyle" parent="ButtonStyle">
        <item name="foreground_color">@color/greyLight</item>
        <item name="background_color">@color/greyDark</item>
    </style>

    <style name="GreenButtonStyle" parent="ButtonStyle">
        <item name="foreground_color">@color/greenLight</item>
        <item name="background_color">@color/greenDark</item>
    </style>

    <style name="BlueButtonStyle" parent="ButtonStyle">
        <item name="foreground_color">@color/blueLight</item>
        <item name="background_color">@color/blueDark</item>
    </style>

    <style name="PurpleButtonStyle" parent="ButtonStyle">
        <item name="foreground_color">@color/purpleLight</item>
        <item name="background_color">@color/purpleDark</item>
    </style>

    <style name="OrangeButtonStyle" parent="ButtonStyle">
        <item name="foreground_color">@color/orangeLight</item>
        <item name="background_color">@color/orangeDark</item>
    </style>

    <style name="RedButtonStyle" parent="ButtonStyle">
        <item name="foreground_color">@color/redLight</item>
        <item name="background_color">@color/redDark</item>
    </style>

    <style name="SkyButtonStyle" parent="ButtonStyle">
        <item name="foreground_color">@color/skyblueLight</item>
        <item name="background_color">@color/skyblueDark</item>
    </style>

    <style name="ShowViewAnimation">
        <item name="android:windowShowAnimation">@anim/scale_in</item>
        <item name="android:windowHideAnimation">@anim/scale_in</item>
    </style>

    <style name="PortionHeading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#484843</item>
    </style>



    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_bg</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>

    </style>
    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextModelNameHeading">

        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#484843</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">#000</item>
    </style>
