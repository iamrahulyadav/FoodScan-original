<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="40dp">

        <ImageView
            android:layout_marginBottom="20dp"
            android:id="@+id/foodScanLogo"
            android:src="@drawable/graphic_foodscan_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please log in to FoodScan"/>
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:id="@+id/email"
            android:backgroundTint="#bfbfb4"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="username" />
        <TextView
            android:id="@+id/email_err"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="invisible"
            android:drawableRight="@drawable/error"
            android:drawableEnd="@drawable/error"
            android:text="Incorrect Username"/>

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:id="@+id/password"
            android:backgroundTint="#bfbfb4"
            android:layout_gravity="center_horizontal"
            android:hint="password" />

        <TextView
            android:id="@+id/pass_err"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textColor="#f00"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/error"
            android:drawableEnd="@drawable/error"
            android:visibility="invisible"
            android:text="Incorrect Password"/>
        <!--<com.gc.materialdesign.views.ButtonRectangle
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/login_login_button"
            android:id="@+id/login"
            android:onClick="onLoginButtonClicked"
            android:layout_marginEnd="10dp"
            android:background="@color/buttonColor"
            />-->
        <!--<com.ph7.analyserforscio.views.ShadowedButton-->
            <!--android:id="@+id/login"-->
            <!--android:layout_width="200dp"-->
            <!--android:text="Login"-->
            <!--style="@style/GreyButtonStyle"-->
            <!--android:onClick="onLoginButtonClicked"-->
            <!--/>-->

        <TextView
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:id="@+id/login"
            android:layout_width="200dp"
            android:enabled="false"
            android:text="Login"
            android:onClick="onLoginButtonClicked"
            style="@style/FCShadowButtonStyle"
            />


    </LinearLayout>

</ScrollView>

