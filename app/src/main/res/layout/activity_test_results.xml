<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="@dimen/activity_vertical_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >

            <RelativeLayout
                android:id="@+id/startNewTestContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:gravity="center_vertical">
                <ImageView
                    android:id="@+id/ivScanImages"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/default_img"/>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/ivScanImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/tvTestName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:ellipsize="marquee"
                        android:text="Start a new test"
                        android:textColor="#484843"
                        android:textSize="20sp"/>
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#bfbfb4" />
                    <TextView
                        android:id="@+id/testCreatedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start New Test"
                        android:textSize="20sp"
                        android:textColor="#888880"/>
                </LinearLayout>
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/modelsDescriptionCont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">


            </LinearLayout>
            <!--<TextView-->
                <!--android:id="@+id/responseString"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:visibility="gone"-->
                <!--/>-->

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
